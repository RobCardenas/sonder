<div class="container">
	<h1>SONDER</h1>
	<div class="row">
		<div class="col-md-4">
			<% @stories.each do |story| %>
				<h2><%= story.name.titleize %></h2>
				<%= image_tag story.pictures.first.image(:medium).to_s %>
				<%= link_to "View Story", story_path(story) %>
			<% end %>
			<% if current_user %>
				<%= link_to "Add a Story", new_story_path %>
			<% end %>
		</div>
	</div>
</div>
